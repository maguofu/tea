/* pages/recommend/recommend.wxss */

.page-view{
  padding: 0 20rpx;
}
.page-title{
  font-size: 36rpx;
  padding: 20rpx 0;
  color: #333;
}
.hide{
  display: none;
}
.des-container{
  margin-bottom: 20rpx;
}
.img{
  width: 100%;
  display: block;
  border-radius: 10rpx;
}
.des-content{
  font-size: 24rpx;
  color: #999;
  text-indent: 2em;
  margin: 10rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}